<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_secondary"
    tools:context=".navigation.tipoutcalculator.TipOutCalculatorFragment">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fontFamily="sans-serif-smallcaps"
        android:includeFontPadding="true"
        android:text="Net Gratuity "
        android:textColor="@color/colorThemeTipOutCalculatorYellow"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_netGratuityAmount"
        app:layout_constraintEnd_toStartOf="@+id/textView_netGratuityAmount" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Total Tip Out "
        android:textColor="@color/colorThemeTipOutCalculatorWhite"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_totalTipOutAmount"
        app:layout_constraintEnd_toStartOf="@+id/textView_totalTipOutAmount" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Gross Gratuity "
        android:textColor="@color/colorThemeTipOutCalculatorWhite"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_grossGratuityAmount"
        app:layout_constraintEnd_toStartOf="@+id/textView_grossGratuityAmount" />

    <EditText
        android:id="@+id/textView_grossGratuity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="Enter Gross Gratuity"
        android:inputType="number"
        android:padding="16dp"
        android:scaleY="3.0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorThemeTipOutCalculatorWhite"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/textView_grossGratuity"
        app:layout_constraintStart_toStartOf="@+id/textView_grossGratuity"
        app:layout_constraintTop_toBottomOf="@+id/textView_grossGratuity" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_positions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/divider"
        app:layout_constraintStart_toStartOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/textView_quickAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="+ Quick Add"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView_positions"
        app:layout_constraintStart_toStartOf="@+id/recyclerView_positions"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_positions" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView_positions"
        app:layout_constraintStart_toStartOf="@+id/recyclerView_positions"
        app:layout_constraintTop_toBottomOf="@+id/textView_quickAdd" />

    <TextView
        android:id="@+id/textView_grossGratuityAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/tip_amount_placeholder"
        android:textColor="@color/colorThemeTipOutCalculatorWhite"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/divider2"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/textView_totalTipOutAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/tip_amount_placeholder"
        android:textColor="@color/colorThemeTipOutCalculatorWhite"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/textView_grossGratuityAmount"
        app:layout_constraintTop_toBottomOf="@+id/textView_grossGratuityAmount" />

    <TextView
        android:id="@+id/textView_netGratuityAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/tip_amount_placeholder"
        android:textColor="@color/colorThemeTipOutCalculatorYellow"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/textView_totalTipOutAmount"
        app:layout_constraintTop_toBottomOf="@+id/textView_totalTipOutAmount" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:text="reset"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/buttonCalculateTipOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Calculate "
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/buttonStartShiftRecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Log Tip > "
            android:textSize="18sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>